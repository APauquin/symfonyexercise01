{% extends 'base.html.twig' %}

{% block title %}Movies in the
	{{ category.name }}
	category:
{% endblock %}

{% block body %}
	{% for program in programs %}
		<div>
			<h2>{{ loop.index }}
				/
				{{ program.title }}
				- Catégorie :
				{{ program.category.name }}</h2>
			<p>{{ program.synopsis }}</p>
			{# Lien vers la fiche de la série : #}
			<a href="{{ path("program_show", { id: program.id }) }}">Voir la fiche</a>
		</div>
	{% else %}

		<a href="{{ path('category_index') }}">
			No movie found.
		</a>
	{% endfor %}
{% endblock %}
